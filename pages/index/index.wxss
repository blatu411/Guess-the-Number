/* 页面容器 */
.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 20px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

/* 标题 */
.title {
  margin-top: 30px;
  margin-bottom: 40px;
  font-size: 36px;
  font-weight: bold;
  color: #fff;
  text-align: center;
  text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
}

/* 统计信息 */
.stats {
  display: flex;
  gap: 30px;
  margin-bottom: 30px;
  width: 100%;
  max-width: 300px;
  justify-content: center;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(255, 255, 255, 0.15);
  padding: 15px 25px;
  border-radius: 12px;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.stat-label {
  font-size: 12px;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 5px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.stat-value {
  font-size: 24px;
  font-weight: bold;
  color: #fff;
}

/* 消息提示 */
.message {
  width: 100%;
  max-width: 300px;
  padding: 15px 20px;
  margin-bottom: 30px;
  border-radius: 8px;
  text-align: center;
  font-size: 16px;
  font-weight: 500;
  animation: slideIn 0.3s ease-out;
}

.message-info {
  background-color: rgba(100, 181, 246, 0.9);
  color: #fff;
  border-left: 4px solid #2196F3;
}

.message-success {
  background-color: rgba(76, 175, 80, 0.9);
  color: #fff;
  border-left: 4px solid #4CAF50;
}

.message-error {
  background-color: rgba(244, 67, 54, 0.9);
  color: #fff;
  border-left: 4px solid #f44336;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 输入框组 */
.input-group {
  display: flex;
  gap: 12px;
  width: 100%;
  max-width: 300px;
  margin-bottom: 30px;
}

.input-field {
  flex: 1;
  height: 50px;
  padding: 0 15px;
  border: none;
  border-radius: 8px;
  background: rgba(255, 255, 255, 0.95);
  font-size: 16px;
  color: #333;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.input-field::placeholder {
  color: #999;
}

/* 猜测按钮 */
.guess-btn {
  width: 80px;
  height: 50px;
  background-color: #ff6b6b;
  color: #fff;
  border: none;
  border-radius: 8px;
  font-size: 16px;
  font-weight: bold;
  box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);
  transition: all 0.3s ease;
}

.guess-btn:active {
  background-color: #ff5252;
  transform: scale(0.98);
}

/* 赢了显示的组 */
.win-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30px;
  margin-bottom: 30px;
}

.celebration {
  font-size: 60px;
  animation: bounce 1s infinite;
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20px);
  }
}

.restart-btn {
  width: 200px;
  height: 50px;
  background-color: #4CAF50 !important;
  color: #fff;
  border-radius: 8px;
  font-size: 16px;
  font-weight: bold;
  box-shadow: 0 4px 15px rgba(76, 175, 80, 0.3);
}

.restart-btn:active {
  background-color: #45a049 !important;
}

/* 历史记录 */
.history {
  width: 100%;
  max-width: 300px;
  margin-top: 20px;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12px;
  padding: 15px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.history-title {
  font-size: 14px;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 10px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.history-list {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.history-item {
  display: inline-block;
  padding: 6px 12px;
  background-color: #f0f0f0;
  border-radius: 6px;
  font-size: 14px;
  color: #333;
  border: 1px solid #ddd;
}
